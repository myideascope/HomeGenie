# HomeGenie Frontend Environment Configuration
# Copy this file to .env.local and configure your settings

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WS_BASE_URL=ws://localhost:8080/ws

# API Settings
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
VITE_RETRY_DELAY=1000

# Authentication
VITE_TOKEN_REFRESH_BUFFER=300

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Notifications
VITE_NOTIFICATION_POLLING_INTERVAL=30000
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Development
VITE_ENABLE_API_LOGGING=false
VITE_MOCK_API=false

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_OFFLINE_MODE=false

# External Services
VITE_GOOGLE_MAPS_API_KEY=
VITE_SENTRY_DSN=
VITE_ANALYTICS_TRACKING_ID=

# Theme and UI
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true