# Production Environment Configuration
# This file contains production-specific settings

# API Configuration - Update these with your production URLs
VITE_API_BASE_URL=https://api.homegenie.yourdomain.com/api/v1
VITE_WS_BASE_URL=wss://api.homegenie.yourdomain.com/ws

# Performance and Debugging
VITE_API_TIMEOUT=30000
VITE_RETRY_ATTEMPTS=3
VITE_ENABLE_API_LOGGING=false
VITE_MOCK_API=false

# Features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_OFFLINE_MODE=false

# File Upload Limits
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Notifications
VITE_NOTIFICATION_POLLING_INTERVAL=30000
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# External Services - Set these in your deployment environment
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
# VITE_SENTRY_DSN=your_sentry_dsn
# VITE_ANALYTICS_TRACKING_ID=your_analytics_id

# UI/UX
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true